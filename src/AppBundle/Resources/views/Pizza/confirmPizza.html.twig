
{% extends "::base.html.twig" %}

{% block title %}AppBundle:Pizza:confirmPizza{% endblock %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
<div class="col-md-4">
</div>
<div class="col-md-4">
<div class="jumbotron">
<div class="alert alert-success" role="alert">

<h2 class="sub-header">złożyłeś zamówienie o id:  {{onePizza.id}}<br></h2>
</div>

           <table class="table table-striped">

           <thead>
           <tr>
           <th>składnik  </th> <th>cena(pln)  </th> <th>waga(g)  </th> <th> kaloryczność(kCal)  </th>
           </thead>
           <tbody>
           {%for val in onePizza.Ingredients%}
           <tr>
           <td> {{val.name}} </td>
           <td> {{val.price}} </td>
           <td> {{val.weight}} </td>
           <td> {{val.calories}} </td>
           </tr>

           {%endfor%}
           <tr>
           <td><strong>suma</strong></td><td>{{sumCash}}</td><td>{{sumWeight}}</td><td>{{sumCalories}}</td>
           </tr>
           </tbody>
           </table>

           <div class="alert alert-info" role="alert">
                   <strong>Twoja pizza jest już prawie gotowa</strong><br>

                 </div>
                 <br>
          <div class="progress">
       <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"><span class="sr-only">80% Complete</span></div>
     </div>

    <br>
     <button type="button" class="btn btn-lg btn-primary" id="mainBtn">wyloguj</button>
        <button type="button" class="btn btn-lg btn-primary" id="newBtn">nowe zamówienie</button>
     <br>
         </div>
{% endblock %}
